<%- include('./layouts/header'); -%>
<body>
  <!-- NAV -->
  <%- include('./layouts/MegaNavbar'); -%>

  <!-- MAIN -->
  <p id="user_id" class="hidden"><%= user.id %></p>
  <main>
    <%- include('./layouts/superSidebar'); -%>
    <section id="sekolah-page" class="h-full bg-white rounded-tl-3xl p-8">
      <div id="bg-table-sekolah" class="min-h-screen grid grid-cols-3 gap-4 shadow-[0_0px_40px_-15px_rgba(0,0,0,0.2)] w-full mt-8 rounded-3xl p-8 bg-white">
        <div class="border border-main p-5 rounded-lg h-max">
            <p class="text-lg font-bold text-main">Foto Profile</p>
            <div class="flex flex-col items-center justify-center">
                <div class="w-[100px] h-[100px] rounded-full overflow-hidden border-2 border-main object-cover mt-5">
                    <img id="profile-picture" src="/img/user-img.png" alt="" class="w-full h-full object-cover">
                </div>
                <form id="form-profile-picture">
                    <div class="flex flex-col items-center mt-5">
                        <label for="custom-input-file">
                            <input type="file" id="input-profile-picture" class="hidden" name="rec-org-logo" accept="image/*"/>
                            <button id="button-profile-picture" type="button" class="rounded-lg flex items-center gap-1 bg-main text-white py-2 px-6">Upload Foto Profile</button>
                        </label>
                        <span class="text-white">Maximum file size is 1 MB.</span></p>
                    </div>    
                </form>
            </div>
        </div>
        <div class="col-span-2 border border-main p-5 rounded-lg divide-y divide-main h-max">
            <form id="form-edit-profile">
                <div class="">
                    <p class="text-lg font-bold text-main">Profile</p>
                    <div class="">
                        <div class="grid grid-cols-2 gap-4 my-4">
                            <label class="block">
                                <span class="text-main tracking-[1.4px] font-normal text-sm">NIK*</span>
                                <!-- Using form state modifiers, the classes can be identical for every input -->
                                <input id="" type="text" value="" name="nik" placeholder="32011***********" disabled class="disabled:bg-main/20 block border border-main w-full px-3 py-[10px] bg-white rounded-lg text-sm placeholder-main/50 text-main
                                focus:outline-none focus:border-main focus:ring-1 focus:ring-main
                                focus:invalid:border-pink-500 focus:invalid:ring-pink-500
                                "/>
                                <p class="text-red-500 text-xs font-normal mt-2">*hubungi admin untuk melakukan perubahan NIK</p>
                            </label>
                            <label class="block">
                                <span class="text-main tracking-[1.4px] font-normal text-sm">Nama Lengkap*</span>
                                <!-- Using form state modifiers, the classes can be identical for every input -->
                                <input id="" type="text" value="" name="nama" placeholder="Jhon Kenedy" class="block border border-main w-full px-3 py-[10px] bg-white rounded-lg text-sm placeholder-main/50 text-main
                                focus:outline-none focus:border-main focus:ring-1 focus:ring-main
                                focus:invalid:border-pink-500 focus:invalid:ring-pink-500
                                "/>
                            </label>
                        </div>
                        <div class="grid grid-cols-2 gap-4 mb-5">
                            <label class="block">
                                <span class="text-main tracking-[1.4px] font-normal text-sm">No.Telp*</span>
                                <!-- Using form state modifiers, the classes can be identical for every input -->
                                <input id="" type="text" value="" name="telp" placeholder="0857*********" class="block border border-main w-full px-3 py-[10px] bg-white rounded-lg text-sm placeholder-main/50 text-main
                                focus:outline-none focus:border-main focus:ring-1 focus:ring-main
                                focus:invalid:border-pink-500 focus:invalid:ring-pink-500
                                "/>
                            </label>
                            <label class="block">
                                <span class="text-main tracking-[1.4px] font-normal text-sm">Email*</span>
                                <!-- Using form state modifiers, the classes can be identical for every input -->
                                <input id="" type="email" value="" name="email" placeholder="admin@admin.com" class="block border border-main w-full px-3 py-[10px] bg-white rounded-lg text-sm placeholder-main/50 text-main
                                focus:outline-none focus:border-main focus:ring-1 focus:ring-main
                                focus:invalid:border-pink-500 focus:invalid:ring-pink-500
                                "/>
                            </label>
                        </div>
    
                    </div>
                </div>
                <div class="">
                    <p class="mt-5 text-lg font-bold text-main">Akun</p>
                    <div class="grid grid-cols-2 gap-4 my-4">
                        <label class="block">
                            <span class="text-main tracking-[1.4px] font-normal text-sm">Password*</span>
                            <!-- Using form state modifiers, the classes can be identical for every input -->
                            <input id="" type="password" value="" name="password" placeholder="••••••" class="block border border-main w-full px-3 py-[10px] bg-white rounded-lg text-sm placeholder-main/50 text-main
                            focus:outline-none focus:border-main focus:ring-1 focus:ring-main
                            focus:invalid:border-pink-500 focus:invalid:ring-pink-500
                            "/>
                            <p class="text-xs text-red-500/80 font-medium mt-1">*password sebelumnya akan langsung diubah</p>
                        </label>
                    </div>
                </div>
                <button type="submit" class="flex items-center gap-1 bg-main text-white py-2 px-10 rounded-lg mt-8 ms-auto">Simpan</button>
            </form>
        </div>
      </div>
    </section>

    <section id="feedback">
        <div id="file-too-large" class="invisible flex items-center gap-2 py-2.5 px-4 bg-red-500/50 border border-red-500 fixed top-[100px] left-1/2 transform -translate-x-1/2 -translate-y-1/2 rounded-lg text-sm text-white font-second font-normal w-[620px] justify-center"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
